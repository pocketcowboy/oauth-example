{
  "name": "authorization-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:bundle && yarn build:copy",
    "build:copy": "mkdir -p dist && cp -R public/ dist",
    "build:bundle": "esbuild app.jsx --jsx-import-source=preact --jsx=automatic --bundle --minify --sourcemap --outdir=dist --allow-overwrite",
    "start": "node index.js",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "common": "*",
    "esbuild": "^0.17.12",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "preact": "^10.13.1",
    "query-string": "^8.1.0"
  },
  "devDependencies": {
    "esbuild-jest": "^0.5.0"
  }
}
